<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>loguear</servlet-name>
        <servlet-class>logicaNegocio.loguear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>traeblog</servlet-name>
        <servlet-class>logicaNegocio.traeblog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>enviaEmail</servlet-name>
        <servlet-class>logicaNegocio.enviaEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrarse</servlet-name>
        <servlet-class>logicaNegocio.registrarse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>traeOcupacion</servlet-name>
        <servlet-class>logicaNegocio.traeOcupacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarTabla</servlet-name>
        <servlet-class>logicaNegocio.borrarTabla</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>desconectarSesion</servlet-name>
        <servlet-class>logicaNegocio.desconectarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loguear</servlet-name>
        <url-pattern>/loguear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>traeblog</servlet-name>
        <url-pattern>/traeblog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enviaEmail</servlet-name>
        <url-pattern>/enviaEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrarse</servlet-name>
        <url-pattern>/registrarse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>traeOcupacion</servlet-name>
        <url-pattern>/traeOcupacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrarTabla</servlet-name>
        <url-pattern>/borrarTabla</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>desconectarSesion</servlet-name>
        <url-pattern>/desconectarSesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
